p.fs-1.text-center #{user.name}
img(src=user.profile_img class="my-3 object-fit rounded-circle mx-auto d-block" alt="user profile photo" width="296" height="296")
.card
	.card-body
		ul.list-group.list-group-flush
			li.list-group-item.d-flex.justify-content-between
				span Role:
				span #{user.role}
			li.list-group-item.d-flex.justify-content-between
				span Nationality:
				span #{user.nationality}
			li.list-group-item.d-flex.justify-content-between
				span Bio:
				span #{user.bio}
			li.list-group-item.d-flex.justify-content-between
				span Contact:
				span 
					a(href=`mailto:${user.contactEmail}`) #{user.contactEmail}
if (owner==true)
	a(class="btn btn-warning w-100 d-block my-3" href="/"+user.username+"/settings" role="button") Edit