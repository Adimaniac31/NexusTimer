extends layout

block content

	.container.my-5
		.row
			.col-md-12.col-lg-4.my-1
				include profile_sidebar
			.col-md-12.col-lg-8.my-1
				include profile_navbar
				.container.my-3
					div(class="form-floating")
						select(id="time-filter" class="form-select" aria-label="Floating label select example")
							option(value="overall") Overall
							option 2x2
							option 3x3
							option 3x3 OH
							option 4x4
							option 5x5
							option Megaminx
						label(for="time-filter") Category-based Statistic Selection
					hr
					.container.border.rounded.d-flex.flex-column.align-items-center.p-4.gap-3.bg-light.my-4.text-center
						h5.card-title Overall stats
						div(class="btn-group" role="group" aria-label="Basic example")
							button(type="button" class="btn btn-dark active" id="day") All times
							button(type="button" class="btn btn-dark" id="day") Last 24 hours
							button(type="button" class="btn btn-dark" id="week") Last week
							button(type="button" class="btn btn-dark" id="month") Last Month
							
						canvas.w-100(class="height: 300px;" id="myChart3")
						table.table
							thead
								tr(id="tr1")
									th(scope="col") Type
									th(scope="col") Global
									th(scope="col") Sesion
							tbody
								tr(id="tr2")
									td(scope="row") Count
									td 
									td 1,302
								tr(id="tr3")
									td(scope="row") Total time
									td 
									td 1h 19min
					
					div(class="row row-cols-1 row-cols-md-2 g-4")
						div(class="col")
							.container.border.rounded.d-flex.flex-column.align-items-center.p-4.gap-3.bg-light
								h5.card-title Brand:
								div.d-flex.gap-3.justify-content-between.align-items-center.d-flex.flex-column
									.container
										canvas(id="myChart2" class="height: 600px;")
						div(class="col")
							.container.border.rounded.d-flex.flex-column.align-items-center.p-4.gap-3.bg-light
								h5.card-title Categories:
								div.d-flex.gap-3.justify-content-between.align-items-center.d-flex.flex-column
									.container
										canvas(id="myChart" class="height: 600px;")
