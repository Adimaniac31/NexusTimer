extends layout

block content

	.container.my-5
		.row
			.col-md-12.col-lg-4.my-1
				p.fs-1.text-center #{userSession.username}
				img(src="/images/profile/gears.jpg" class="my-3 object-fit rounded-circle mx-auto d-block" alt="user profile photo" width="296" height="296")
				.card
					.card-body
						ul.list-group.list-group-flush
							li.list-group-item.d-flex.justify-content-between
								span Featured:
								span Member
							li.list-group-item.d-flex.justify-content-between
								span Nationality:
								span Mexico
							li.list-group-item.d-flex.justify-content-between
								span Total solves all cubes:
								span 11,234
							li.list-group-item.d-flex.justify-content-between
								span Prefered category:
								span 3x3
							li.list-group-item.d-flex.justify-content-between
								span Total solves prefered cube:
								span 2,323
							li.list-group-item.d-flex.justify-content-between
								span Solve ratio:
								span 97.15%
							li.list-group-item.d-flex.justify-content-between
								span Cubes Most used brand:
								span Moyu
							li.list-group-item.d-flex.justify-content-between
								span Prefered cube:
								span XuangGon
							li.list-group-item.d-flex.justify-content-between
								span Cubes owned:
								span 19
				a(class="btn btn-secondary w-100 d-block my-1" href="/profile/"+userSession.id+"/settings" role="button") Edit
			.col-md-12.col-lg-8.my-1
				.nav.nav-tabs
					.nav.item
						a.nav-link.active(aria-current="page" href='/profile/'+userSession.id) Overview
					.nav-item
						a.nav-link(href='/profile/'+userSession.id+'/alg-collection') Algorithm collections
					.nav-item
						a.nav-link(href="#") Achievements
				.container.my-3
					div(class="row row-cols-1 row-cols-md-2 g-4")
						div(class="col")
							img(src="/images/graphs/img4.png" class="object-fit" alt="" width="400" height="400")