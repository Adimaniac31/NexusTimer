extends layout

block content
	div.container.d-flex.justify-content-center.mx-auto.mt-5
		form.border.p-4(action='/register" method="POST')
			.mb-3
				label.form-label(for='username') Username
				input#username.form-control(type='text' value='rojonaitor')
			.mb-3
				label.form-label(for='exampleInputEmail1') Email address
				input#exampleInputEmail1.form-control(type='email' aria-describedby='emailHelp' value='email23@gmail.com')
				#emailHelp.form-text We&apos;ll never share your email with anyone else.
			.mb-3
				label.form-label(for='exampleInputPassword1') Password
				input#exampleInputPassword1.form-control(type='password' value='contrase123')
			button.btn.btn-primary(type='submit') Submit