extends layout

block content
	.container.vh-100(id="timer-vh")
		.container.d-flex.d-block.pt-3.gap-3
			div(class="form-floating")
				input(type="hidden" name="_csrf" value=csrfToken)
				input(type="hidden" name="id" value=user._id)
				
				select(class="form-select" id="category" name="category" aria-label="Floating label for category select")
					option(selected) Open this select menu
					for element in cubes
						option(value=element._id) #{element.category}
				label(for="category") Category
				
			div(class="form-floating")
				select(class="form-select" id="cube" name="cube" aria-label="Floating label for cube select")
					option(selected) Open this select menu
					for element in cubes
						option(value=element._id) #{element.name} | #{element.category}
				label(for="cube") Cube
				
				
		.container
			div(id="scramble" class="shadow-sm p-3 mb-5 bg-body-tertiary rounded fs-3 text-center my-5 bg-dark text-bg-dark") B L' D F2 D' B2 D2 F2 L2 U F2 R2 D B' F U F' D F D2
			
		.container
			h1(id="timer" class="display-1 text-center my-5") 0.000
			

		.container.fixed-bottom.d-flex.justify-content-center
			.card(style="width: 400px")
				.card-body
					ul.list-group.list-group-flush
						li.list-group-item.d-flex.justify-content-between.p-0
							span Count:
							span 86
						li.list-group-item.d-flex.justify-content-between.p-0
							span Best time:
							span 9.34
						li.list-group-item.d-flex.justify-content-between.p-0
							span Avg5:
							span 10.32
						li.list-group-item.d-flex.justify-content-between.p-0
							span Avg12:
							span 10.94
						li.list-group-item.d-flex.justify-content-between.p-0
							span Avg50:
							span 12.32
						li.list-group-item.d-flex.justify-content-between.p-0
							span Desviation:
							span 1.32
						li.list-group-item.d-flex.justify-content-between.p-0
							span Average:
							span 12.32
						

						
	script(src="/scripts/timer.js")